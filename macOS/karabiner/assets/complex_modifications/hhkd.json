{
    "title": "HHKB custom keymap(@tamm)",
    "rules": [{
            "description": "Shift + Esc to ~",
            "manipulators": [{
                "type": "basic",
                "from": {
                    "key_code": "escape",
                    "modifiers": {
                        "mandatory": [
                            "right_shift"
                        ]
                    }
                },
                "to": [{
                    "key_code": "grave_accent_and_tilde",
                    "modifiers": [
                        "right_shift"
                    ]
                }]
            }]
        },
        {
            "description": "Command + Esc to context switch",
            "manipulators": [{
                "type": "basic",
                "from": {
                    "key_code": "escape",
                    "modifiers": {
                        "mandatory": [
                            "left_command"
                        ]
                    }
                },
                "to": [{
                    "key_code": "grave_accent_and_tilde",
                    "modifiers": [
                        "left_command"
                    ]
                }]
            }]
        }
    ]
}
